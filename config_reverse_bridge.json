{
  "log": {
    "loglevel": "warning"
  },
  "reverse": {
    "bridges": [
      {
        "tag": "bridge",
        "domain": "reverse1.proxy"
      },
      {
        "tag": "bridge",
        "domain": "reverse2.proxy"
      }
    ]
  },
  "outbounds": [
    {
      "tag": "interconn",
      "protocol": "vmess",
      "settings": {
        "vnext": [
          {
            "address": "", // portal address
            "port": 22, // portal port
            "users": [
              {
                "id": "" // bridge-portal uuid
              }
            ]
          }
        ]
      },
      "streamSettings": {
        "network": "tcp"
      }
    },
    {
      "protocol": "freedom",
      "settings": {},
      "tag": "out"
    }
  ],
  "routing": {
    "rules": [
      {
        "type": "field",
        "inboundTag": [
          "bridge"
        ],
        "domain": [
          "full:reverse1.proxy",
          "full:reverse2.proxy"
        ],
        "outboundTag": "interconn"
      },
      {
        "type": "field",
        "inboundTag": [
          "bridge"
        ],
        "outboundTag": "out"
      }
    ]
  }
}

{
  "log": {
    "loglevel": "warning"
  },
  "reverse": {
    "portals": [
      {
        "tag": "portal1",
        "domain": "reverse1.proxy"
      },
      {
        "tag": "portal2",
        "domain": "reverse2.proxy"
      }
    ]
  },
  "inbounds": [
    {
            "tag": "socks-in",
            "port": "10808",
            "protocol": "socks",
            "sniffing": {
              "enabled": true,
              "destOverride": ["http", "tls"],
              "routeOnly": false
            },
            "settings": {
                "udp": true
            }
    },
    {
      "tag": "interconn",
      "port": 22, // port 22 or 443 or ...
      "protocol": "vmess",
      "settings": {
        "clients": [
          {
            "id": "" // bridge-portal uuid
          }
        ]
      },
      "streamSettings": {
        "network": "tcp"
      }
    },
    {
      "tag": "others",
      "port": 22, // port 22 or 443 or ...
      "protocol": "vmess",
      "settings": {
        "clients": [
          {
            "id": "" // others-portal uuid
          }
        ]
      },
      "streamSettings": {
        "network": "tcp"
      }
    }
  ],
  "routing": {
    "rules": [
      {
        "inboundTag": [
          "interconn"
        ],
        "domain": ["full:reverse1.proxy"],
        "outboundTag": "portal1"
      },
      {
        "inboundTag": [
          "interconn"
        ],
        "domain": ["full:reverse2.proxy"],
        "outboundTag": "portal2"
      },
      {
        "inboundTag": [
          "interconn", "socks-in", "others"
        ],
        "balancerTag": "round"
      } 
    ],
    "balancers" : [
            {
                "selector": [
                    "portal1", "portal2"
                ],
                "strategy": {
                    "type":"roundRobin"
                },
                "tag": "round"
            }
        ]
  }
}
